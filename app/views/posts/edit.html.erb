<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Verify post</h1>

      <%= simple_form_for @post do |f| %>
        <%= f.input :verified %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>

      <%= link_to 'Show', @post %>
      <%= link_to 'Back', @posts_path %>
    </div>
  </div>
</div>

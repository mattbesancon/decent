<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Editing post</h1>

      <%= simple_form_for @post do |f| %>
        <%= f.input :title %>
        <%= f.input :author %>
        <%= f.input :content %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>

      <%= link_to 'Show', @post %>
      <%= link_to 'Back', @posts_path %>
    </div>
  </div>
</div>

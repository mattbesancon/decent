<div class="sticky">
    <%= link_to "Add a post", new_post_path, class: "btn btn-primary btn-lg btn-block" %>
</div>
  <br>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-12 col-md-6 col-lg-3">
      <div class="post" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?avatar');">
        <div class="post-description">
          <h2><%= post.title %></h2>
        </div>
        <%= link_to "Here it is", post_path(post), class: 'post-link' %>
      </div>
    </div>
    <br>
  <% end %>
</div>

